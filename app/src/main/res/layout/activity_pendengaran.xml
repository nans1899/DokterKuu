<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe0f5"
    tools:context=".PendengaranActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambarmata"
            android:layout_width="wrap_content"
            android:layout_height="265dp"
            android:src="@drawable/pendengarancontent"/>

        <GridLayout
            android:id="@+id/cardcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnOrderPreserved="false"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_marginTop="265dp"
            android:alignmentMode="alignMargins"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:elevation="6dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/deaf"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:text="Gangguan Pendengaran"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Gangguan pendengaran adalah salah satu gangguan kesehatan yang umumnya disebabkan oleh faktor usia atau karena sering terpapar suara yang nyaring/keras. Pendengaran bisa dikatakan terganggu jika sinyal suara gagal mencapai otak. Biasanya gangguan pendengaran berkembang secara bertahap, tapi hilangnya pendengaran bisa muncul tiba-tiba. Suara-suara yang memiliki tingkat kebisingan hingga 79 desibel masih bisa dikategorikan aman bagi telinga manusia."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:text="Penyembuhan"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Cara pengobatan gangguan pendengaran tergantung dari penyebab serta tingkat keparahannya."/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </GridLayout>
        <TextView
            android:id="@+id/bantuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="28dp"
            android:text="Butuh Bantuan Ahli?"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/cardcard"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/janjipendengaran"
            android:text="Temui Dokter!"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/bantuan"
            android:textSize="20dp"/>

    </RelativeLayout>

</ScrollView>