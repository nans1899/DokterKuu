<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".single_row1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:hint="Name"
        android:id="@+id/viewName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:hint="Date"
        android:textSize="20dp"
        android:id="@+id/viewDate"
        android:layout_below="@+id/viewName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:id="@+id/viewDisease"
        android:hint="Disease"
        android:layout_below="@+id/viewDate"/>

    <TextView
        android:id="@+id/textviewDocName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewDisease"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="Doctor Name"/>

    <TextView
        android:id="@+id/textviewHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewDocName"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="Hospital"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:hint="Notes"
        android:id="@+id/viewNotes"
        android:layout_below="@+id/textviewHospital"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/numbers"
        android:text="1"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        />


</RelativeLayout>